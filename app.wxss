/**app.wxss**/
.container{
  min-height: 100vh;
  background-color: #f8f8f8;
}
.DoneUI-list{
  background-color: #fff;
}
.DoneUI-cell{
  padding: 10rpx 36rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.DoneUI-cell:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #e5e5e5;
    color: #e5e5e5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.DoneUI-cell image{
  width:55rpx;
  height:55rpx;
  margin-right:5rpx;
  display:block;  
}
.weui-cell__hd{
  padding: 0 15px 0 0;
}
.DoneUI-cell__bd {
  flex: 1;
}
.DoneUI-cell__ft{
 text-align: right;
  color: #808080; 
}
.DoneUI-cell_access .DoneUI-cell__ft{
  padding-right: 13px;
  position: relative;
}
.DoneUI-cell_access .DoneUI-cell__ft:after {
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;
}
.noThing{
  font-size: 32rpx;
  text-align: center;
  color: #fc7070;
  padding: 30px 0;
}

