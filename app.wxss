  padding-left: 15rpx;
  padding-right: 15rpx;
  color: #808080;
  font-size: 14px;
}
.DoneUI-cells__title + .DoneUI-cells {
    margin-top: 0;
}
.DoneUI-cells {
    margin-top: 1.17647059em;
