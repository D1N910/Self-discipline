/* pages/index/index.wxss */
.week{
  display: flex;
  font-size: 28rpx;
  justify-content: space-between;
  width: 100%;
}
.weekItem{
  flex: 1;
  text-align: center;
  min-height: 100vh;
}
.weekItem .weekItemTitle{
  font-weight: bolder;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ededed;
}
.weekItem .thing{
  padding: 16rpx 0;
  margin: 6rpx 3rpx;
  position: relative;  
  line-height: inherit;
  border-radius: 12rpx;
}
.success{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0px;
  top: 0px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.success image{
  width: 100%;
  max-height: 100%;
}