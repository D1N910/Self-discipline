/* pages/index/index.wxss */
.week{
  display: inline-flex;
  font-size: 28rpx;
  justify-content: space-between;
  width: 100%;
  box-shadow: 0px 5px 20px #ddd;  
}
.weekItem{
  flex: 1;
  text-align: center;
}
.weekItem .weekItemTitle{
  font-weight: bolder;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff7199;
  color: white;
}
.weekItemTitle .weekName{
  border:1px solid #ff7199;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin: auto;
  transition: all 0.2s;
}
.weekItemTitleTime{
  position: relative;
}
.weekItemTitleTime::after{
  content: '';
  top: 0px;
  width: 15rpx;
  height: 15rpx;
  left: 0px;
  right: 0px;
  margin: auto;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
}
.nowWeekName .clickWeekName{
  color: #ff7199;
  background-color: #fff;
}
.weekItemTitle .clickWeekName{
  border-color: #fff;
}
.thing{
  padding: 16rpx 0;
  margin: 6rpx 3rpx;
  position: relative;  
  line-height: inherit;
  height: 200rpx;
  display: flex;
}
.thing .dealTime{
  color: #9e9e9e;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}
.success{
  width: 81rpx;
  height: 81rpx;
  position: absolute;
  right: 16rpx;
  bottom: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.success image{
  width: 81rpx;
  height: 81rpx;
}
.editButton{
  position: absolute;
  background-color: #ff7199;
  width: 81rpx;
  height: 81rpx;
  border-radius: 50%;
  right: 30rpx;
  bottom: 60rpx;
  text-align: center;
  display: flex;
  align-items:center;
  justify-content: center;
}
.editButton image{
  width: 41rpx;
  height: 41rpx;
}
swiper{
  height: calc(100vh - 160rpx);
}